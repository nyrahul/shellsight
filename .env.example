# ShellSight Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Session encryption secret (generate with: openssl rand -hex 32)
SESSION_SECRET=change-me-to-a-random-string

# JWT signing secret (generate with: openssl rand -hex 32)
JWT_SECRET=change-me-to-another-random-string

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Port for nginx to listen on (default: 80)
HTTP_PORT=80

# Base URL of the backend server (used for OAuth callbacks)
BASE_URL=http://localhost

# Frontend URL (used for CORS and redirects)
FRONTEND_URL=http://localhost

# Enable debug logging (true/false)
DEBUG=false

# =============================================================================
# S3 STORAGE SETTINGS
# =============================================================================

# S3 bucket name for shell recordings
S3_BUCKET=shellsight-recordings

# S3 region
S3_REGION=us-east-1

# Custom S3 endpoint (for S3-compatible storage like MinIO, RustFS)
# Leave empty for AWS S3
S3_ENDPOINT=http://localhost:9000

# Optional prefix/folder in the bucket
S3_PREFIX=

# S3 credentials (can also be configured via Settings > Storage in the UI)
S3_ACCESS_KEY=
S3_SECRET_KEY=

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================

# Disable authentication entirely (true/false)
# Set to true for testing or if you have external authentication
AUTH_DISABLED=false

# -----------------------------------------------------------------------------
# Google OAuth (optional)
# Get credentials at: https://console.cloud.google.com/apis/credentials
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# GitHub OAuth (optional)
# Get credentials at: https://github.com/settings/developers
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Microsoft OAuth (optional)
# Get credentials at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# -----------------------------------------------------------------------------
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# -----------------------------------------------------------------------------
# Generic OIDC Provider (optional)
# For Keycloak, Okta, Auth0, or other OIDC providers
# -----------------------------------------------------------------------------
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISPLAY_NAME=SSO
